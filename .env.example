# AI Provider Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Slack Configuration
# Get your Slack token from: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
# Or use user token for stealth mode
SLACK_TOKEN=xoxp-your-slack-user-token
SLACK_TEAM_ID=T01234567

# Enable message posting (optional, comma-separated channel IDs or "true" for all)
# SLACK_MCP_ADD_MESSAGE_TOOL=C01234567,C12345678
# Or enable for all channels
# SLACK_MCP_ADD_MESSAGE_TOOL=true

# Linear Configuration
# Get your Linear API key from: https://linear.app/settings/api
LINEAR_API_KEY=lin_api_your_linear_api_key_here
